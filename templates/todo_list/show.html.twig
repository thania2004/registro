{% extends 'base.html.twig' %}

{% block title %}TodoList{% endblock %}

{% block body %}
    <h1>TodoList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo_list.id }}</td>
            </tr>
            <tr>
                <th>Asignatura</th>
                <td>{{ todo_list.Asignatura }}</td>
            </tr>
            <tr>
                <th>Turno</th>
                <td>{{ todo_list.Turno }}</td>
            </tr>
            <tr>
                <th>Tiempo</th>
                <td>{{ todo_list.Tiempo ? todo_list.Tiempo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Observarciones</th>
                <td>{{ todo_list.Observarciones }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_todo_list_index') }}">back to list</a>

    <a href="{{ path('app_todo_list_edit', {'id': todo_list.id}) }}">edit</a>

    {{ include('todo_list/_delete_form.html.twig') }}
{% endblock %}
